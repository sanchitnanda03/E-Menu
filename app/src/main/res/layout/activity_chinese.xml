<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcd94"
    android:orientation="vertical"
    tools:context=".chinese">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="sans-serif"
        android:text="SANCHIT'S RESTAURANT"
        android:textAlignment="center"
        android:textColor="#400000"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        app:srcCompat="@drawable/restaurant" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:fontFamily="sans-serif-black"
        android:text="MENU"
        android:textAlignment="center"
        android:textColor="	#ae0001"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CHINESE"
        android:textAlignment="center"
        android:textColor="#400000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#ffa54f"
                app:cardCornerRadius="11dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="11dp">

                <Button
                    android:id="@+id/btncvn"
                    android:layout_width="224dp"
                    android:layout_height="82dp"
                    android:layout_gravity="right"
                    android:backgroundTint="#a0522d"
                    android:text="VEG NOODLES  ₹270"
                    android:textSize="20sp"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/noodless" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#ffa54f"
                app:cardCornerRadius="11dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="11dp">

                <Button
                    android:id="@+id/btncman"
                    android:layout_width="224dp"
                    android:layout_height="82dp"
                    android:layout_gravity="right"
                    android:backgroundTint="#a0522d"
                    android:text="MANCHURIAN  ₹280"
                    android:textSize="20sp"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/manchurian" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#ffa54f"
                app:cardCornerRadius="11dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="11dp">

                <Button
                    android:id="@+id/btncmo"
                    android:layout_width="224dp"
                    android:layout_height="82dp"
                    android:layout_gravity="right"
                    android:backgroundTint="#a0522d"
                    android:text="MOMOS                      ₹180"
                    android:textSize="20sp"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/momos" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#ffa54f"
                app:cardCornerRadius="11dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="11dp">

                <Button
                    android:id="@+id/btnctn"
                    android:layout_width="224dp"
                    android:layout_height="82dp"
                    android:layout_gravity="right"
                    android:backgroundTint="#a0522d"
                    android:text="THAI NOODLES  ₹290"
                    android:textSize="20sp"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/imageView43"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/thainoodles" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#ffa54f"
                app:cardCornerRadius="11dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="11dp">

                <Button
                    android:id="@+id/btnccp"
                    android:layout_width="224dp"
                    android:layout_height="82dp"
                    android:layout_gravity="right"
                    android:backgroundTint="#a0522d"
                    android:text="CHINESE PLATTER       ₹320"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/platter" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>